<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green2E7C31</item>
        <item name="colorPrimaryVariant">@color/green60AC5D</item>
        <item name="colorPrimaryDark">@color/green005005</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/gray777777</item>

        <item name="android:textColorPrimary">@color/green005005</item>
        <item name="android:textColorSecondary">@color/green005005</item>
        <item name="android:windowBackground">@color/grayF5F5F5</item>
        <item name="android:fontFamily">@font/segoe_ui_semibold</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/green005005</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ButtonPrimary" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/selector_text_color_button_primary</item>
        <item name="android:textSize">@dimen/size16sp</item>
    </style>

</resources>

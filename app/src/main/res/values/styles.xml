<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green2E7C31</item>
        <item name="colorPrimaryVariant">@color/green60AC5D</item>
        <item name="colorPrimaryDark">@color/green004F04</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/gray777777</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/segoe_ui_semibold</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/green004F04</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>